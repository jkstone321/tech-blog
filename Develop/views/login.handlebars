<div class="container border border-dark">
    <h2>Login</h2>

    <form class="form login-form">
        <div class="form-group">
            <label for="email-login">Username:</label>
            <input class="form-input" type="text" id="username-input-login" />
        </div>
        <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" id="password-input-login" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
        <a href="/signup">Don't have an account? Sign up now!</a>
    </form>
</div>

<script src="/js/login.js"></script>