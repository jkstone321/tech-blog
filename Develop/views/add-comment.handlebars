<div class="row mb-2 justify-content-center">
    <div class="card col-10 p-0">
        <h2 class="card-header" id="{{posts.id}}">{{posts.post_title}}</h2>
        <p class="card-body">{{posts.post_text}}</p>
    </div>
</div>

<form class="new-comment-form w-10 justify-content-center">
    <div class="form-group">
        <label for="commentInput">Comment</label>
        <input type="input" class="form-control" id="postTitleInput" name="comment-body">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Comment</button>
    </div>
</form>
<script src="/js/comment.js"></script>